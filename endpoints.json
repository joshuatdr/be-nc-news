{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": 1,
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "url goes here..",
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the specified article object",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 8,
        "title": "Does Mitch predate civilisation?",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "Text from the article..",
        "created_at": "2020-04-17T01:08:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves all comments for the specified article",
    "queries": [],
    "exampleResponse": {
      "comments": {
        "comment_id": 8,
        "body": "Text from the article..",
        "article_id": 10,
        "author": "icellusedkars",
        "votes": 0,
        "created_at": "2020-04-17T01:08:00.000Z"
      }
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a new comment to the specified article",
    "queries": [],
    "exampleResponse": {
      "comment": {
        "comment_id": 19,
        "body": "wow... cool article",
        "article_id": 3,
        "author": "lurker",
        "votes": 0,
        "created_at": "2024-08-28T08:31:10.794Z"
      }
    }
  }
}
